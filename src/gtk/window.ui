<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <requires lib="Vte" version="3.91" />
  <template class="PlanetnineWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">PlanetNine</property>
    <property name="default-width">1100</property>
    <property name="default-height">800</property>
    <property name="width-request">360</property>
    <property name="height-request">300</property>
    <child>
      <object class="GtkEventControllerKey">
        <signal name="key-pressed" handler="on_key_pressed"></signal>
      </object>
    </child>
    <property name="content">
      <object class="PanelDock" id="dock">
        <property name="reveal-start">true</property>
        <property name="vexpand">true</property>
        <child>
          <object class="AdwToolbarView" id="toolbar_view">
            <child type="top">
              <object class="AdwHeaderBar" id="header_bar">
                <property name="centering-policy">loose</property>
                <property name="title-widget">
                  <object class="PanelOmniBar" id="omni_bar">
                    <property name="icon-name">play-symbolic</property>
                    <property name="width-request">200</property>
                    <property name="menu-model">run-menu</property>
                    <property name="action-name">win.run-selected-cell</property>
                  </object>
                </property>
                <child type="start">
                  <object class="PanelToggleButton">
                    <property name="dock">dock</property>
                    <property name="area">start</property>
                    <property name="tooltip-text" translatable="yes">Toggle Left Panel</property>
                  </object>
                </child>
                <child type="start">
                  <object class="AdwSplitButton">
                    <property name="icon-name">list-add-symbolic</property>
                    <property name="menu-model">add-menu</property>
                    <property name="action-name">win.add-code-block</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="primary">True</property>
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Main Menu</property>
                    <property name="menu-model">primary_menu</property>
                  </object>
                </child>
              </object>
            </child>
            <property name="content">
              <object class="PanelGrid" id="grid">
                <signal name="create-frame" handler="on_create_frame"/>
              </object>
            </property>
          </object>
        </child>
        <child type="start">
          <object class="AdwToolbarView">
            <style>
              <class name="sidebar-color"></class>
            </style>
            <child type="top">
              <object class="AdwHeaderBar">
                <property name="show-end-title-buttons">false</property>
              </object>
            </child>
            <child type="bottom">
              <object class="PanelStatusbar">
                <property name="visible">false</property>
              </object>
            </child>
            <property name="content">
              <object class="PanelPaned">
                <property name="orientation">vertical</property>
                <child>
                  <object class="PanelFrame">
                    <child>
                      <object class="PanelWidget">
                        <property name="title">Workspace</property>
                        <property name="tooltip">Workspace</property>
                        <property name="can-maximize">true</property>
                        <property name="icon-name">folder-symbolic</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Project tree/folder ?</property>
                            <property name="vexpand">true</property>
                            <property name="hexpand">true</property>
                            <style>
                              <class name="title-2"></class>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="KernelManager" id="kernel_manager_view">
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child internal-child="bottom">
          <object class="PanelDockChild">
            <property name="child">
              <object class="PanelPaned" id="bottom_area">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="PanelFrame">
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="PanelWidget">
                        <property name="title">Jupyter Server</property>
                        <property name="tooltip">Jupyter Server</property>
                        <property name="can-maximize">true</property>
                        <property name="icon-name">terminal-symbolic</property>
                        <child>
                          <object class="GtkScrolledWindow">
                            <child>
                              <object class="VteTerminal" id="terminal">
                                <property name="hexpand">true</property>
                                <property name="vexpand">true</property>
                                <property name="font-scale">0.8</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="PanelWidget">
                        <property name="title">Something</property>
                        <property name="icon-name">folder-symbolic</property>
                        <property name="can-maximize">true</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Something else?</property>
                            <property name="vexpand">true</property>
                            <property name="hexpand">true</property>
                            <style>
                              <class name="title-2"></class>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <property name="bottom-edge">
              <object class="PanelStatusbar" id="statusbar">
                <child type="suffix">
                  <object class="PanelToggleButton">
                    <property name="dock">dock</property>
                    <property name="area">bottom</property>
                    <property name="dock">dock</property>
                    <property name="tooltip-text" translatable="yes">Toggle Bottom Panel</property>
                  </object>
                </child>
                <child type="suffix">
                  <object class="GtkMenuButton">
                  <property name="direction">up</property>
                  <property name="label">Cell 1, Ln 1, Col 2</property>
                  <property name="popover">
                    <object class="GtkPopover">
                      <property name="child">
                        <object class="GtkBox">
                          <property name="orientation">vertical</property>
                          <child>
                            <object class="GtkBox">
                              <property name="spacing">6</property>
                              <child>
                                <object class="GtkEntry"></object>
                              </child>
                              <child>
                                <object class="GtkButton">
                                  <property name="label">Go</property>
                                  <style>
                                    <class name="suggested-action"></class>
                                  </style>
                                </object>
                              </child>
                            </object>
                          </child>
                        </object>
                      </property>
                    </object>
                  </property>
                </object>
                </child>
                <child type="prefix">
                 <object class="GtkMenuButton" id="kernel_status_menu">
                  <property name="direction">up</property>
                  <property name="label"> | </property>
                  <property name="popover">
                    <object class="GtkPopover">
                      <property name="child">
                        <object class="GtkLabel">
                            <property name="label">Kernel Something</property>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
  <menu id="add-menu">
    <section>
      <item>
        <attribute name="label">Text</attribute>
        <attribute name="action">win.add-text-block</attribute>
      </item>
      <item>
        <attribute name="label">Raw</attribute>
        <attribute name="action">win.add-text-block</attribute>
      </item>
    </section>
  </menu>
  <menu id="run-menu">
    <section>
      <item>
        <attribute name="label">Start Kernel</attribute>
        <attribute name="action">win.start-kernel</attribute>
      </item>
      <item>
        <attribute name="label">Restart Kernel</attribute>
        <attribute name="action">win.restart-kernel</attribute>
      </item>
      <item>
        <attribute name="label">Shutdown Kernel</attribute>
        <attribute name="action">win.shutdown-kernel</attribute>
      </item>
      <item>
        <attribute name="label">Restart Kernel and Run</attribute>
        <attribute name="action">win.restart-kernel-and-run</attribute>
      </item>
    </section>
  </menu>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">New Notebook</attribute>
        <attribute name="action">win.new-notebook</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">New Browser Page</attribute>
        <attribute name="action">win.new-browser-page</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Open Notebook</attribute>
        <attribute name="action">win.open-notebook</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Start Server</attribute>
        <attribute name="action">win.start-server</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About PlanetNine</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
