<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <requires lib="Vte" version="3.91" />
  <template class="PlanetnineWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">PlanetNine</property>
    <property name="default-width">600</property>
    <property name="default-height">600</property>
    <property name="width-request">360</property>
    <property name="height-request">300</property>
    <property name="content">
      <object class="AdwToolbarView" id="toolbar_view">
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <child type="start">
              <object class="AdwSplitButton">
                <property name="icon-name">list-add-symbolic</property>
                <property name="menu-model">add-menu</property>
                <property name="action-name">win.add-code-block</property>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton">
                <property name="icon-name">play-symbolic</property>
                <signal name="clicked" handler="on_run_button_clicked"></signal>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton">
                <property name="icon-name">stop-symbolic</property>
                <signal name="clicked" handler="on_stop_button_clicked"></signal>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton">
                <property name="icon-name">arrow-circular-small-top-right-symbolic</property>
                <signal name="clicked" handler="on_restart_button_clicked"></signal>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton">
                <property name="icon-name">seek-forward-large-symbolic</property>
                <signal name="clicked" handler="on_restart_and_run_button_clicked"></signal>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="primary">True</property>
                <property name="icon-name">open-menu-symbolic</property>
                <property name="tooltip-text" translatable="yes">Main Menu</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkPaned">
            <property name="orientation">vertical</property>
            <property name="resize-end-child">false</property>
            <property name="start-child">
              <object class="GtkScrolledWindow">
                <child>
                  <object class="AdwClamp">
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">6</property>
                    <property name="maximum-size">800</property>
                    <property name="tightening-threshold">700</property>
                    <child>
                      <object class="GtkListView" id="list_view">
                        <property name="margin-bottom">100</property>
                        <property name="factory">
                          <object class="GtkSignalListItemFactory" id="item_factory">
                            <signal name="bind" handler="on_factory_bind"></signal>
                            <signal name="setup" handler="on_factory_setup"></signal>
                          </object>
                        </property>
                        <child>
                        <object class="GtkDropTarget" id="list_drop_target">
                          <signal name="drop" handler="on_drop_target_drop"></signal>
                        </object>
                      </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <property name="end-child">
              <object class="GtkScrolledWindow">
                <child>
                  <object class="VteTerminal" id="terminal">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <property name="yalign">end</property>
                    <property name="font-scale">0.8</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
  <menu id="add-menu">
    <section>
      <item>
        <attribute name="label">Text</attribute>
        <attribute name="action">win.add-text-block</attribute>
      </item>
    </section>
  </menu>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About PlanetNine</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
